<% layout('layout/boilerplate') %>
<style> 
    body{
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
    url("https://queticosuperior.org/wp-content/uploads/2023/05/IMG_1863-1024x768.jpg");
    background-size: cover;
    }
  </style>
<div class="container d-flex justify-content-center align-items-center mb-5 ">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow " style="background-color: rgba(255, 255, 255, 0.673);">
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />
            <div class="card-body">
                <h5 class="card-title  mb-3">Enter Campground Tiltle Name:</h5>
                <form action="/campgrounds/editbytitle" class="needs-validation" method="post" novalidate>
                    <label for="title">Title:</label>
                    <input type="text" name="title" id="title" placeholder="Campground" required>
                    <button class="btn btn-primary">Submit</button>
                </form>
              <p class="card-text mt-2">Make sure to add correct name to edit your campground.</p>
              
            </div>
          </div>
    </div>
</div>
</div>
